{
  "version": "2.0.0",
  "description": "BooksTrack iOS app - Swift/SwiftUI expertise focus. Backend in separate repository.",
  "skills": {
    "ast-grep-for-swift": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Syntax-aware Swift code search using ast-grep",
      "promptTriggers": {
        "keywords": [
          "find",
          "search for",
          "locate",
          "swift code",
          "method",
          "function",
          "class",
          "property",
          "@mainactor",
          "@observable",
          "@model",
          "@bindable",
          "force unwrap",
          "refactor",
          "all instances"
        ],
        "intentPatterns": [
          "where.*defined",
          "find.*swift",
          "search.*code",
          "locate.*function",
          "show.*all.*methods",
          "list.*classes"
        ]
      }
    },
    "ios-swift-dev-guidelines": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "critical",
      "description": "iOS 26, Swift 6.2, SwiftUI, SwiftData best practices and patterns",
      "promptTriggers": {
        "keywords": [
          "swiftui",
          "swiftdata",
          "ios",
          "swift 6",
          "concurrency",
          "@mainactor",
          "@bindable",
          "@observable",
          "actor",
          "async",
          "await",
          "hig",
          "human interface",
          "accessibility",
          "navigation",
          "ios 26",
          "cloudkit",
          "persistent identifier",
          "model context"
        ],
        "intentPatterns": [
          "create.*view",
          "build.*component",
          "implement.*feature",
          "add.*swiftui",
          "fix.*actor",
          "concurrency.*issue",
          "navigation.*pattern",
          "ios.*best.*practice",
          "swiftdata.*relationship",
          "cloudkit.*sync"
        ]
      }
    },
    "mcp-zen-usage": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "description": "Deep analysis, code review, planning for complex Swift/iOS problems",
      "promptTriggers": {
        "keywords": [
          "debug",
          "review",
          "plan",
          "analyze",
          "architecture",
          "investigate",
          "complex issue",
          "code review",
          "refactor",
          "performance"
        ],
        "intentPatterns": [
          "help.*debug",
          "review.*code",
          "plan.*feature",
          "analyze.*problem",
          "complex.*bug",
          "architectural.*decision",
          "investigate.*issue",
          "refactor.*strategy"
        ]
      }
    }
  }
}
